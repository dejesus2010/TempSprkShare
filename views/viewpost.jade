                    div.postContribution
                        a(href='userpage')
                            img( src= '/images/default_avatar.png', height= '30', width= '30' )
                        a(href='userpage')
                            | User 2
                        span
                            | 3rd contribution

                   //
                    table
                        tbody(data-bind="foreach: rowsData")
                            tr
                                td.postContribution

                                   a( data-bind='href : userpage')
                                        img( data-bind="src : userImage", height='30', width='30')
                                    div( data-bind="text: contributionText" )






