include viewpostHeaderMixin
extends ../layout

block head
    link( rel='stylesheet', href='/stylesheets/viewpoststyle.css')


block mainContent
    // MastHead. Has title and description
    +viewpostHeader(postRowsData)

       block PostHeader

    // Actual content of the post, includes contribution
    div#postContentBlock
       div.container
            div.row
                div.col-md-1#leftCol
                    ul.nav.nav-stacked#sidebar
                         li
                            div.btn-group
                                div.add.btn.btn-primary(data-toggle='modal', href='#createcontribution')
                                    span
                                        |  | Contribute


                div.col-md-11#rightCol

                   div.postContent
                       =postRowsData[0].postcontent

                   each contribution in contributionsRowsData
                        div.postContribution
                            =contribution.contribcontent





block scripts
    script(src='javascripts/viewpostjs.js', type="text/javascript")
