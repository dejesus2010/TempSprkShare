include avatarOrSignupMixin
include updateAvatarModalMixin
extends layout

head
  title= title

block navBarContent
  +avatarOrSignupMixin(true)

block mainContent
  div(class= 'container special')
    header#overview.jumbotron
      h2 User Overview
      div.btn-group
        a.btn.btn-primary.fron_button(data-toggle='modal', href= '#update_avatar_modal')
          span
            | Change Avatar
      div.tabbable.tabs-below
        div.tab-content
          div.tab-pane.active

      div.tabbable.tabbable
        ul.nav.nav-tabs
          li.active
            a(href= '#posts', data-toggle= 'tab') Posts
          li
            a(href= '#friends', data-toggle= 'tab') Friends

        div.tab-content
          div(class= 'tab-pane active', id= 'posts')
            div(id ='left', class= 'container')
              p
                a(href= '#right', id= '#getUserAllPosts', data-bind= 'click: getPosts') View All </br>
                a(href= '#right', id= '#getUserTempPosts', data-bind= 'click: getPosts') Temporary Posts </br>
                a(href= '#right', id ='#getUserPermPosts', data-bind= 'click: getPosts') Permanent Posts </br>

            div(id= 'right', class= 'container')
              p


          div(class= 'tab-pane', id= 'friends')
            div(id ='left', class= 'container')
              p


            div(id= 'right', class= 'container')
              p

